{% extends "_layouts/site" %}

{% block content  %}
    <div class="card card-rounded bg-primary">
        <div class="card-body">
            <div class="col-sm-12 text-center">
                <h2 class="text-white upgrade-info mb-0">{{ entry.title }}</h2>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
