                        <section class=" h-100 card card-rounded justify-content-around text-dark ">
                            <div class=" grid-margin d-flex flex-column  stretch-card card-rounded">
{#                                <img class=" rounded-2" src=" {{ thumbnail ? thumbnail.getUrl() : 'https://via.placeholder.com/160x90' }} " alt="Card image cap">#}
                                <div class="card-body">
                                    <p>
                                        {{ entry.safetyDescription }}
                                    </p>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
