{% extends "_layouts/site" %}

{% block content %}
    <section class="site-section bg-light">
        <div class="container">
            <div class="row justify-content-center mb-5">
                <div class="col-md-7 text-center">
                    <h2>Assigments</h2>
                    <p class="lead">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Earum magnam illum maiores adipisci pariatur, eveniet.</p>
                </div>
            </div>
            <div class="row top-course">
                {% set machine = craft.entries.section('machineDetailPage').orderBy('postDate DESC').limit(20).all %}
                {% for machine in machine %}
                    <div class="card mt-4" style="">
                        <img class="card-img-top mt-3" src="https://via.placeholder.com/200" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">{{ machine.title }}</h5>
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                            <a href="{{ machine.url }}" class="btn btn-primary">Learn more</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
